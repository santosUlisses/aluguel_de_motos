<div class="container my-5">
    <h2 class="mb-4 text-center">Usuários e Motos Alugadas</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each users}}
        <div class="col">
            <div class="card h-100 shadow-lg border-0 rounded-3">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">{{this.nome}}</h5>

                    {{#if this.Motos}}
                    <h6 class="card-subtitle mb-3 text-muted">Motos alugadas:</h6>
                    <ul class="list-group list-group-flush mb-3">
                        {{#each this.Motos}}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <i class="bi bi-motorcycle me-2"></i>{{this.nome}}
                            </span>
                            <div class="d-flex gap-2">
                                <a href="/user/pagamento/{{this.id}}" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-cash-coin"></i> Pagamento
                                </a>
                                <form action="/moto/remover/{{this.id}}" method="post" class="m-0">
                                    <input type="hidden" value="{{this.id}}" name="idMoto">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                    {{else}}
                    <p class="text-muted">Não há motos alugadas para este usuário.</p>
                    {{/if}}

                    <div class="mt-auto">
                        <a href="/lista/pagamentos/{{this.id}}" class="btn btn-success w-100 mb-2">
                            <i class="bi bi-list-check"></i> Lista de Pagamentos
                        </a>
                        <a href="/alugar/moto/{{this.id}}" class="btn btn-primary w-100">
                            <i class="bi bi-plus-circle"></i> Alugar Moto
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="mt-5 text-center">
        <a href="/painel/admin" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>