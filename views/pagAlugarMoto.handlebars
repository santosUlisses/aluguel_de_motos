<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow w-100" style="max-width: 600px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Alugar moto para {{user.nome}}</h4>
        </div>
        <div class="card-body">
            <form action="/moto/alugar" method="post">
                <input type="hidden" name="id" value="{{user.id}}">

                <div class="mb-3">
                    <label for="idMoto" class="form-label">Motos disponíveis</label>
                    <select class="form-select" name="idMoto" id="idMoto" required>
                        {{#if motosDisponiveis}}
                        {{#each motosDisponiveis}}
                        <option value="{{this.id}}">{{this.nome}}</option>
                        {{/each}}
                        {{else}}
                        <option>Não há moto disponível</option>
                        {{/if}}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="valor" class="form-label">Valor do aluguel</label>
                    <input type="number" step="0.01" min="0" class="form-control" name="valor_aluguel" id="valor"
                        placeholder="Ex: 150.00" required>
                </div>

                <div class="mb-3">
                    <label for="inicio" class="form-label">Data de início</label>
                    <input type="date" class="form-control" name="data_inicio" id="inicio" required>
                </div>

                <div class="mb-3">
                    <label for="vencimento" class="form-label">Data de vencimento</label>
                    <input type="date" class="form-control" name="data_vencimento" id="vencimento" required>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Confirmar Aluguel" class="btn btn-success">
                </div>
            </form>
        </div>
        <div class="card-footer text-end">
            <a href="/lista/motos" class="btn btn-outline-secondary btn-sm">Voltar</a>
        </div>
    </div>
</div>